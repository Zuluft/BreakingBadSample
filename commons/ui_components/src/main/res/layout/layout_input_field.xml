<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.google.android.material.textfield.TextInputLayout">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_primary_input_field"
        android:hint="AAAAAA"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/primary_input_field_padding"
        android:textColor="@color/color_carbon"
        android:textSize="@dimen/primary_text_size" />

</merge>